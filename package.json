{
    "name": "smartcard-test",
    "version": "0.0.1",
    "main": "sct.js",
    "author": "Gabriele Coquillard",
    "license": "GPL-2.0-or-later",
    "dependencies": {
        "pcsclite": "^1.0.0"
    },
    "devDependencies": {
        "babel": "^6.23.0",
        "babel-core": "^6.26.3",
        "babel-preset-es2015": "^6.24.1",
        "babelify": "^8.0.0",
        "browserify": "^16.5.0",
        "uglify-js": "^3.6.0",
        "watchify": "^3.11.1"
    },
    "scripts": {
        "watch": "watchify src.js -o sct.js -v [ babelify --presets [es2015] ]",
        "build": "browserify sct.js -t [ babelify --presets [es2015] ] | uglifyjs -m -c -o sct-min.js"
    },
    "browserify": {
        "transform": [
            [
                "babelify",
                {
                    "presets": [
                        "es2015"
                    ]
                }
            ]
        ]
    }
}
